<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>e4.platform.tests.parent</artifactId>
  <groupId>com.eclipse-testing</groupId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <q7-server-uri>cloud.xored.com</q7-server-uri>
    <q7-version>1.2.14-SNAPSHOT</q7-version>
    <build-name>I20130205-0800</build-name>
    <platform-file>eclipse-platform-${build-name}-win32.zip</platform-file>
    <platform-url>http://download.eclipse.org</platform-url>
    <platform-path>eclipse/downloads/drops4/${build-name}/eclipse-platform-${build-name}-win32.zip</platform-path>
  </properties>

  <pluginRepositories>
    <pluginRepository>
      <id>q7-releases</id>
      <name>Xored Maven repository</name>
      <url>http://maven.xored.com/nexus/content/repositories/q7-releases/</url>
    </pluginRepository>

    <pluginRepository>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <id>q7-snapshots</id>
      <name>Xored Maven repository</name>
      <url>http://maven.xored.com/nexus/content/repositories/q7-snapshots/</url>
    </pluginRepository>
  </pluginRepositories> 
  
  <repositories>
    <repository>
      <id>thirdparty</id>
      <name>Xored thridparty repository</name>
      <url>http://maven.xored.com/nexus/content/repositories/thirdparty/</url>
    </repository>
  </repositories>

</project>
